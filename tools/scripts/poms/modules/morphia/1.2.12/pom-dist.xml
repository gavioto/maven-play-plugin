<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.google.code.maven-play-plugin.org.playframework.modules.morphia</groupId>
    <artifactId>play-morphia</artifactId>
    <version>1.2.12</version>
    <packaging>jar</packaging>

    <name>Play! Morphia Module</name>
    <description>Play! Morphia Module</description>
    <url>http://www.playframework.org/modules/morphia</url>

    <developers>
        <developer>
            <id>greenlaw110</id>
            <name>Green Luo</name>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git://github.com/greenlaw110/play-morphia.git</connection>
        <url>https://github.com/greenlaw110/play-morphia</url>
    </scm>

    <dependencies>
        <dependency>
            <groupId>com.google.code.maven-play-plugin.org.playframework</groupId>
            <artifactId>play</artifactId>
            <version>1.2.4</version>
            <scope>provided</scope>
        </dependency>

        <dependency>
            <groupId>org.mongodb</groupId>
            <artifactId>mongo-java-driver</artifactId>
            <version>2.7.3</version>
        </dependency>

        <dependency>
            <groupId>com.google.code.maven-play-plugin.com.google.code.morphia</groupId>
            <artifactId>morphia</artifactId>
            <version>1.00-20110403</version>
            <exclusions>
                <exclusion>
                    <groupId>org.mongodb</groupId>
                    <artifactId>mongo-java-driver</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>

</project>
