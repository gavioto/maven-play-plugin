<?xml version="1.0" ?>
<project>

  <modelVersion>4.0.0</modelVersion>

  <groupId>com.google.code.maven-play-plugin.org.allcolor.yahp</groupId>
  <artifactId>yahp-internal</artifactId>
  <version>1.3</version>
  <name>Yet another Html to Pdf converter</name>

  <description>YaHP is a java library which permits to convert an html document into a pdf document.</description>

  <url>http://www.allcolor.org/YaHPConverter</url>

  <licenses>
    <license>
      <name>The GNU Lesser General Public License, Version 2.1</name>
      <url>http://www.gnu.org/licenses/lgpl-2.1.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <dependencies>
    <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>yahp</artifactId>
        <version>${project.version}</version>
    </dependency>

    <dependency>
      <groupId>com.google.code.maven-play-plugin.org.allcolor.shanidom</groupId>
      <artifactId>shani-parser</artifactId>
      <version>1.4.17-patched-yahp-1.3</version>
    </dependency>

    <dependency>
        <groupId>com.google.code.maven-play-plugin.net.sf.jtidy</groupId>
        <artifactId>jtidy</artifactId>
        <version>r938</version>
    </dependency>

    <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>1.2.16</version>
    </dependency>

    <dependency>
        <groupId>com.google.code.maven-play-plugin.org.xhtmlrenderer</groupId>
        <artifactId>core-renderer</artifactId>
        <version>2011.04.16</version>
    </dependency>
  </dependencies>

  <build>
    <sourceDirectory>src-internal</sourceDirectory>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.4</source>
          <target>1.4</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>
